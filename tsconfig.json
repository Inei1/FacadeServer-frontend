{
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "noResolve": false,
    "jsx": "react",
    "reactNamespace": "RX",
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "./dist/",
    "types": [
      "node"
    ],
    "baseUrl": "",
    "paths": {
      "common/*": ["./src/*"],
      "platformSpecific/*": ["./src-platformspecific/web/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./src-platformspecific/**/*"
  ]
}
